.cms_grid
  .row.expanded
    .small-12.columns
      %h3 Event categories

      = link_to 'new event category', new_admin_eventcategory_path, :method => :get, class: [:button, :small]


  .events
    - @eventcategories.each do |ec|
      .row.expanded
        .columns.category
          = ec.name
          %span.smaller_font
            = link_to 'Edit', edit_admin_eventcategory_path(ec), class: [:button, :small]
          %span.delete= link_to 'Delete', [:admin, ec], data: {:confirm => 'Are you sure?'}, :method => :delete, class: [:button, :alert, :small]




  .row.expanded
    .small-12.columns= link_to 'new event category', new_admin_eventcategory_path, :method => :get, class: [:button, :small]
