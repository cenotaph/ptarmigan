!!! 5
%html
  %head
    = display_meta_tags :site => "Grassroots", :og => {:url => 'http://creativeterritories.lv', :title => '17/02/2015'}
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %link{ :rel => "alternate", :type => "application/rss+xml", :title => "Ptarmigan RSS", :href => "/feed.rss"}
    //= stylesheet_link_tag :application
    = stylesheet_link_tag theme_stylesheet_path(:application), :media => :screen
    = javascript_include_tag :application
    = javascript_include_tag theme_javascript_path(:application)
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyAFlkw7SUgPOTDy8XkWVo_kszw20I22d4g&sensor=false", :type => "text/javascript"}

    = csrf_meta_tag

    %script{:type => "text/javascript", :src => "http://w.sharethis.com/button/buttons.js"}
    %script{:type => "text/javascript"} stLight.options({publisher: "ur-dae0667d-47dc-d390-f0b1-129d17517bbe"});
    %script{:type => "text/javascript"}
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-12518395-2']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      var switchTo5x=true;
    %script{:type => "text/javascript", :src => "http://w.sharethis.com/button/buttons.js"}
    %link{:href => 'http://fonts.googleapis.com/css?family=Arimo:400,700|Raleway:400,900&subset=latin,latin-ext', :rel => :stylesheet, :type => 'text/css'}
    %script{:type => "text/javascript"} stLight.options({publisher: "ur-dae0667d-47dc-d390-f0b1-129d17517bbe"});
    

    %meta{ :content => "1 day", :name => "revisit-after" }

  %body
    #fb-root
    :javascript
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&appId=1472879426262623&version=v2.0";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    %header
      .container
        .sixteen.columns.alpha= link_to image_tag(current_theme_image_path("top.jpg")), '/'


      .container#sticky-menu
        .sixteen.columns
          .kompass
            = link_to image_tag(current_theme_image_path("top.jpg")), '/'
            .title Grassroots*
          %ul.sf-menu
            %li.first{:class => locale.to_s}
              = link_to t("ct.programme"), '#'
              %ul
                %li= link_to t("ct.programme"), page_path('forums')
                %li= link_to t("ct.theme"), page_path('tema')
                %li= link_to t("ct.activities"), page_path('norise')
            %li{:class => locale.to_s}= link_to t("ct.participants"), event_attendees_path('grassroots')

            %li{:class => locale.to_s}= link_to t("ct.register_link"), event_path('grassroots')
            %li{:class => locale.to_s}= link_to t("ct.place"), page_path('vieta')

    = yield

      


          
    %footer
      .footer_info
        .container
          .sixteen.columns
            %p
              Grassroots* 
              &sdot;
              = l '2015-02-17'.to_date, format: :long
              &sdot;
              = link_to "info @ creativeterritories - lv", "mailto:info@creativeterritories(changetodot)lv"
              &sdot;
              
          .sixteen.columns
            .logos
              %ul
                %li= image_tag(current_theme_image_path("Bottom_1.png"))
                %li= image_tag(current_theme_image_path("Bottom_2.png"))

          .sixteen.columns
            = link_to image_tag(current_theme_image_path("GitHub-Mark-32px.png")), 'https://github.com/cenotaph/ptarmigan'

:javascript
  $(document).ready(function() {
    $("#sticky-menu").sticky({ topSpacing: 0 });
    #{yield :jquery}
  });    
