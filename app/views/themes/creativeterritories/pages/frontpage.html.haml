.event_categories_list#sticky-menu
  %center
    %ul.event_categories
      - @eventcategories.each do |ec|
        %li= link_to ec.name, '#', style: "color: ##{ec.colour}"
        

= calendrier(:year => Time.now.year, :month => Time.now.month, :day => Time.now.day, :start_on_monday => true, :display => :month, :title => false) do |cell_begin_time, cell_end_time|
  - if count_sorted_events(@events, cell_begin_time, cell_end_time) > 0 

    %ul.events
      - yield_sorted_events(@events, cell_begin_time, cell_end_time) do |obj| 
        %li{style: "#{obj.bordercss}"}
          = [obj.event_time, obj.name].join(' ')
          - unless obj.promoter.blank?
            .smaller= "by #{obj.promoter}"
          .smaller= "at #{obj.place.name}"            