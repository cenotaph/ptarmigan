- unless Attendee.by_event(412).approved.with_profile_pic.empty?
  .page{:style => "margin-bottom: 40px;"}
    = link_to(page_path('participants')) do 
      .title= t :who_is_coming, :scope => :donekino
    .participants
      - random_participant = Attendee.by_event(412).approved.with_profile_pic.random
      - if random_participant.nil?
        %p= t :no_registrants_yet, :scope => :donekino
      - else
        - unless random_participant.filmstill_file_size.blank?
          #slider
            = image_tag random_participant.profile.url(:full)
            = image_tag random_participant.filmstill.url(:full)
          :javascript
            $('#slider').cycle({ 
              fx:      'fade', 
            });
        - else
          %center= image_tag random_participant.profile.url(:full)
        .participant_name= random_participant.name
        - unless random_participant.comes_from.blank?
          .participant_location= random_participant.comes_from
        - unless random_participant.work_in_progress_title.blank?
          .participant_project= "'#{random_participant.work_in_progress_title}'"
        .blog_body= random_participant.bio
        .see_all= link_to t(:see_all_participants, :scope => :donekino), event_attendees_path('done-kino')

